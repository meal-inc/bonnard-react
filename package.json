{
  "name": "@bonnard/react",
  "version": "0.4.1",
  "description": "Bonnard embedded analytics â€” React charts, dashboards, and hooks",
  "repository": {
    "type": "git",
    "url": "https://github.com/meal-inc/bonnard-react"
  },
  "type": "module",
  "sideEffects": [
    "*.css"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./dashboard": {
      "import": "./dist/dashboard.js",
      "types": "./dist/dashboard.d.ts"
    },
    "./styles.css": "./dist/styles/bonnard.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown src/index.ts src/dashboard.ts --format esm --clean && tsc --emitDeclarationOnly --outDir dist && cp -r src/styles dist/",
    "dev": "tsdown src/index.ts src/dashboard.ts --format esm --watch"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "@bonnard/sdk": ">=0.2.0"
  },
  "dependencies": {
    "echarts": "^5.5.0",
    "echarts-for-react": "^3.0.2",
    "numfmt": "^2.5.0",
    "gray-matter": "^4.0.3",
    "unified": "^11.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.0.0",
    "rehype-stringify": "^10.0.0",
    "unist-util-visit": "^5.0.0",
    "yaml": "^2.8.0",
    "isomorphic-dompurify": "^2.0.0"
  },
  "devDependencies": {
    "@bonnard/sdk": "^0.4.2",
    "@types/react": "^19.0.0",
    "tsdown": "^0.12.5",
    "typescript": "^5.5.0"
  }
}
